<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.alibaba.alimei.dao.IUserRoleMapper">

    <resultMap id="UserRoleMap" type="com.alibaba.alimei.dao.vo.UserRole">
        <result column="role_code" property="roleCode" />
        <result column="user_id" property="userId" />
        <result column="id" property="id" />
        <result column="app_name" property="appName" />
        <result column="app_parent" property="appParent" />
    </resultMap>

    <insert id="clear" useGeneratedKeys="false">
        delete from user_role where app_name = #{appName}
    </insert>

    <insert id="insert" parameterType="UserRole" useGeneratedKeys="false">
        insert into user_role
            (<include refid="allColumns"/>)
        values
            (#{roleCode}, #{userId}, #{id}, #{appName}, #{appParent})
    </insert>

    <insert id="insertBatch" parameterType="List" useGeneratedKeys="false">
        insert into user_role
            (<include refid="allColumns"/>)
        values
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.roleCode}, #{item.userId}, #{item.id}, #{item.appName}, #{item.appParent})
        </foreach>
    </insert>

    <update id="update" parameterType="UserRole">
        update user_role
        <set>
            <if test="roleCode != null">role_code = #{roleCode},</if>
            <if test="userId != null">user_id = #{userId},</if>
        </set>
        where id = #{id};
    </update>

    <delete id="delete">
        delete from user_role where id = #{id};
    </delete>

    <select id="get" resultMap="UserRoleMap">
        select * from user_role
        where id = #{id}
        limit 0, 1
    </select>

    <select id="count" parameterType="UserRole" resultType="int">
        select count(0) from user_role
        <where>
            <if test="roleCode != null">and role_code = #{roleCode}</if>
            <if test="userId != null">and user_id = #{userId}</if>
            <if test="id != null">and id = #{id}</if>
            <if test="appName != null">and app_name = #{appName}</if>
            <if test="appParent != null">and app_parent = #{appParent}</if>
        </where>
    </select>

    <select id="list" parameterType="Map" resultMap="UserRoleMap">
        select * from user_role
        <if test="userRole != null">
            <where>
                <if test="userRole.roleCode != null">and role_code = #{userRole.roleCode}</if>
                <if test="userRole.userId != null">and user_id = #{userRole.userId}</if>
                <if test="userRole.id != null">and id = #{userRole.id}</if>
                <if test="userRole.appName != null">and app_name = #{userRole.appName}</if>
                <if test="userRole.appParent != null">and app_parent = #{userRole.appParent}</if>
            </where>
        </if>
        limit #{offset}, #{length}
    </select>

    <sql id="allColumns">
        role_code, user_id,  id, app_name, app_parent
    </sql>

</mapper>